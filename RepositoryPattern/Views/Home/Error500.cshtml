@{
    ViewBag.Title = "Error500";
    Layout = "~/Views/Shared/_RootHead.cshtml";
}

<div class="container">
     @Html.Action("Menu","Common")
</div>
<div class="jumbotron">
   <h1>@ViewBag.Error500 Error</h1>
    <p>The Page could not be found</p>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">Tell More about the Error</div>
            <div class="panel-body">
               <div class="form-group">
                @Html.Label("Customer Name", new { @class = "sr-only" })
                @Html.TextBox("Company", null, new { @class = "form-control", placeholder = "CustomerName" })
            </div>
            <div class="form-group">
                @Html.Label("Subject", new { @class = "sr-only" })
                @Html.TextBox("FirstName", null, new { @class = "form-control", placeholder = "Subject" })
            </div>
            <div class="form-group">
                @Html.Label("Give Detailed Issues", new { @class = "sr-only" })
                @Html.TextArea("LastName", null, new { @class = "form-control", placeholder = "ErrorNote" })
            </div>
                <div><button class="btn btn-primary">Submit</button></div>
            </div>
        </div>
    </div>
</div>
