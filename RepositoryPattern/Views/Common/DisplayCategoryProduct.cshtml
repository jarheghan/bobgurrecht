@using RepositoryPattern.Service.UI
@model IEnumerable<RepositoryPattern.Model.Catalog.ProductCategory>
 @{var imgpath = "~/Images/WallImages/imagepath";
   var catInfo = Model.Select(x => x.Category).FirstOrDefault(); 
   }
<div class="row">
    
    <h1>@catInfo.Name</h1>
    <p>Category Description Category Description Category Description Category Description Category Description Category Description Category Description Category Description Category Description</p>
    <ul class="pagination">
        <li><a href="#">&laquo;</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#">&raquo;</a></li>
    </ul>
</div>
  <br>


<div class="row">
     @foreach(var cat in Model)
     {
         <div class="col-lg-2">
             <a href="#">
                 <img class="small-thumbnail" style="height:auto; width:auto; max-width:170px; max-height:200px;"  src="@Url.Content(imgpath + "/"+cat.Picture.FilePath)">
                 <label class="nlabel">
                     <h3>@cat.Product.Name</h3>
                 </label></a>
                 <p class="dlabel">@cat.Product.ShortDescription</p>
         </div>
     }
 </div>