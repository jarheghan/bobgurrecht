@model RepositoryPattern.Model.Catalog.ProductVariation 
<div role="form">
        <div class="box-body">
            <div class="form-group">
                @Html.Label("Variation Description", new {@for="" })
                @Html.TextBox("descriptionedit", Model.Description, new {@class="form-control",placeholder="Name" })
                @Html.Hidden("prdVariationIDedit", Model.ID)
                @Html.ValidationMessage("Variation")
            </div>
                <div class="form-group">
                @Html.Label("Product Number",null, new {@for="" })
                @Html.TextBox("sizeedit",Model.Size, new {@class="form-control" })
                @Html.ValidationMessage("ShortDescription")
            </div>
              <div class="form-group">
                @Html.Label("Make Default Variation")
                @Html.CheckBox("ckcDefault",Model.Default ?? false)
                @Html.ValidationMessage("Default")
            </div>                           
           </div>
     </div>

