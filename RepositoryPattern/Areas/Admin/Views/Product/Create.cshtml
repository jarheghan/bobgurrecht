@using ClientDependency.Core.Mvc
@using RepositoryPattern.Areas.Admin.Infacstructure
@{
    ViewBag.Title = "Create Products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    //Html.RequiresCss("bootstrap/bootstrapValidator.css","Content",5);
    Html.RequiresCss("dropzone/css/basic.css", "Content",5);
    Html.RequiresCss("dropzone/css/dropzone.css", "Content", 6);
    Html.RequiresCss("admin/font-awesome.css", "Content", 7);
    Html.RequiresCss("admin/ionicons.css", "Content", 8);
    Html.RequiresCss("dialog.css", "jqueryUI", 6);




    Html.RequiresJs("jquery-2.1.1.js", "jquery", 1);
    Html.RequiresJs("jquery-ui-1.11.1.js", "jquery", 2);
    Html.RequiresJs("bootstrap.js", "bootstrap", 3);
    Html.RequiresJs("jquery.dialog.js", "Custom", 4);
    Html.RequiresJs("catalog.js", "Custom", 5);
    Html.RequiresJs("dropzone/dropzone.js", "Content", 10);
    Html.RequiresJs("admin/app.js", "Content", 11);
    Html.RequiresJs("admin/dashboard.js", "Content", 12);
}



  @Html.Action("Menu", "Common", new {area="Admin"})

 <aside class="right-side">
 <section class="content">
                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-10">
                            <!-- general form elements -->
                            <div class="box box-primary">
                                <div class="box-header">
                                    <h3 class="box-title">Create Product</h3>
                                </div><!-- /.box-header -->
                                <!-- form start -->

                        @using(Html.BeginForm("Create","Product",FormMethod.Post,new{id="createProductForm"})){

                                <div role="form">
                                    <div class="box-body">
                                        <div class="form-group">
                                            @Html.Label("Name", new {@for="" })
                                            @Html.TextBox("Name", null, new {@class="form-control",placeholder="Name" })
                                            @Html.ValidationMessage("Name")
                                        </div>
                                         <div class="form-group">
                                            @Html.Label("Short Description",null, new {@for="" })
                                            @Html.TextBox("ShortDescription",null, new {@class="form-control" })
                                            @Html.ValidationMessage("ShortDescription")
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Description",null, new {@for="" })
                                            @Html.TextArea("Description",null, new {@class="form-control",placeholder="Description" })
                                            @Html.ValidationMessage("Description")
                                        </div>
                                         <div class="form-group">
                                            @Html.Label("Category", new {@for="" })
                                            @Html.DropDownList("CategoryID", new SelectList(CommonHelpers.GetCategory(), "Value", "Text"),"Parent Category", new { @class = "form-control" })
                                        </div>
                                         <div class="form-group">
                                            @Html.Label("SKU", new {@for="" })
                                            @Html.TextBox("SKU",null, new {@class="form-control",placeholder="SKU" })
                                        </div>
                                         <div class="form-group">
                                            @Html.Label("Price", new {@for="" })
                                            @Html.TextBox("Price",null, new {@class="form-control",placeholder="Price" })
                                            @Html.ValidationMessage("Price")
                                        </div>
                                         <div class="form-group">
                                            @Html.Label("Manufacturer", new {@for="" })
                                            @Html.TextBox("ManufacturePartNo",null, new {@class="form-control",placeholder="Manufacture No" })
                                        </div>
                                         <div class="form-group">
                                            @Html.Label("Quantity", new {@for="" })
                                            @Html.TextBox("StockQuantity",null, new {@class="form-control",placeholder="Quantity" })
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Product Variation", new {@for="" })<br />
                                           <a href="#" class="btn btn-primary" id="btnProdVariation">Add Product Variation</a>
                                           <div>
                                               <table class="table table-bordered table-hover"><thead><tr><th>Description</th><th>Size</th></tr></thead>
                                                   <tbody id="tablePrdVariation"></tbody>
                                               </table>
                                           </div>
                                        </div>
                                         <div class="form-group">
                                            @Html.Label("Is a Feature Product?", new {@for="" })
                                        
                                            <input type="checkbox" value="This is true" />
                                        </div>
                                          @Html.Partial("Picture")
                                        </div><!-- /.box-body -->
                                    <div class="box-footer">
                                        <button type="submit" class="btn btn-primary ">Submit</button>
                                    </div>

                                </div> <!-- End forms -->
                            }

                                </div>
                        

                            </div><!-- /.box -->
                          </div>
                  
              </section>
</aside>
<div id="productvariation"></div>
 
 @section scripts{
      <script type="text/javascript">
          catalog.prodImage();
    </script>

     }