@using ClientDependency.Core
@using ClientDependency.Core.Mvc
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/adminBootstrap/css")
    @Styles.Render("~/bundles/modernizr")
   
    @MvcHtmlString.Create(Html.RenderCssHere(new List<IClientDependencyPath>
												{
													new BasicPath("Content", "~/Content")
												}).ToString())
    @MvcHtmlString.Create(Html.RenderJsHere(new List<IClientDependencyPath>
												{
													new BasicPath("jquery", "~/Scripts")
												}).ToString())
    @MvcHtmlString.Create(Html.RenderJsHere(new List<IClientDependencyPath>
												{
													new BasicPath("Content", "~/Content")
												}).ToString())
    
</head>
<body class="skin-blue">
    @Html.Action("Header","Common", new {area="Admin"})
   <div class="wrapper row-offcanvas row-offcanvas-left">
        @RenderBody()
   </div>
    
   @* @Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundle/bootstrap")
    @if(IsSectionDefined("scripts"))
    {
    @RenderSection("scripts")
    }
</body>
</html>